{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.verygoodplugins/mcp-automem",
  "title": "MCP AutoMem",
  "description": "Graph-vector memory for AI assistants using FalkorDB and Qdrant",
  "version": "0.10.0",
  "x-release-please-version": "0.10.0",
  "websiteUrl": "https://automem.ai/?utm_source=mcp-registry",
  "repository": {
    "url": "https://github.com/verygoodplugins/mcp-automem",
    "source": "github"
  },
  "remotes": [
    {
      "type": "streamable-http",
      "url": "https://{endpoint}/mcp",
      "variables": {
        "endpoint": {
          "description": "Your deployed AutoMem MCP server URL (e.g., your-app.railway.app)",
          "isRequired": true
        }
      },
      "headers": [
        {
          "name": "Authorization",
          "description": "Bearer token for authentication (optional if using URL-based auth with ?api_token=...)",
          "isRequired": false,
          "isSecret": true
        }
      ]
    },
    {
      "type": "sse",
      "url": "https://{endpoint}/mcp/sse",
      "variables": {
        "endpoint": {
          "description": "Your deployed AutoMem MCP server URL (e.g., your-app.railway.app)",
          "isRequired": true
        }
      },
      "headers": [
        {
          "name": "Authorization",
          "description": "Bearer token for authentication (optional if using URL-based auth with ?api_token=...)",
          "isRequired": false,
          "isSecret": true
        }
      ]
    }
  ],
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@verygoodplugins/mcp-automem",
      "version": "0.9.1",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "tools": [
    {
      "name": "store_memory",
      "description": "Store memory with content, tags, importance, and metadata"
    },
    {
      "name": "recall_memory",
      "description": "Hybrid search (vector + keyword + tags + recency)"
    },
    {
      "name": "associate_memories",
      "description": "Create typed relationships between memories"
    },
    {
      "name": "update_memory",
      "description": "Update existing memory fields"
    },
    {
      "name": "delete_memory",
      "description": "Delete memory and embedding"
    },
    {
      "name": "check_database_health",
      "description": "Check FalkorDB/Qdrant connection status"
    }
  ]
}
